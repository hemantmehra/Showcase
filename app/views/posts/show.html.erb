<p><%= link_to "Home", root_path %></p>
<h2><%= @post.title %></h2>
<p>Submited by <%= @post.user.username %></p>
<%= link_to @post.link, @post.link  %>
<div class="">
  <%= image_tag @post.image.url(:medium) %>
</div>
<p>
  <%= pluralize(@post.get_upvotes.size, "Like") %>
  <%= link_to "Like", like_post_path(@post), method: :get %>
</p>
<p>
  <%= pluralize(@post.get_downvotes.size, "Dislike") %>
  <%= link_to "Dislike", dislike_post_path(@post), method: :get %>
</p>
<p><%= @post.description %></p>
<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
<div id="comment">
  <h2 class="comment-class"><%= pluralize(@post.comments.count, "Comment") %></h2>
  <% @comments.each do |comment| %>
    <div class="comment">
      <p class="username"><%= comment.user.username %></p>
      <p class="content"><%= comment.content %></p>
    </div>
  <% end %>
  <%= render 'comments/form' %>
</div>
